---
import { pwaInfo } from 'virtual:pwa-info';
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@700&display=swap" rel="stylesheet">
		<title>{title}</title>
		<script src="/src/pwa.ts"></script>
    	{ pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} /> }
		<ViewTransitions />
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: #5d00ff;
		--accent-alt: #031ab4;
		--basketball: #f38f03;
		--soccer: #00a859;
		--accent-gradient: linear-gradient(45deg, var(--accent), var(--accent-alt) 30%, white 60%);
		--accent-gradient-alt: linear-gradient(45deg, var(--accent-alt), var(--accent) 30%, white 60%);
		--accent-gradient-bold: linear-gradient(-45deg, var(--accent-alt), var(--accent));
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: #F6F6F6;
		color: #3F3F3F;
		
	}
	body {
		margin: 0;
	}

	.wrapper {
		max-width: 90ch;
		margin-left: auto;
		margin-right: auto;
	}

	.button {
		background-color: #2ec4b6ff;
		text-transform: uppercase;
		padding: 0.5rem 1rem;
		color: #011627ff;
		text-decoration: none;
		font-weight: bold;
		letter-spacing: 0.1rem;
		border-radius: 0.25rem;
	}


	#loading {
    color: red;
  }
  #loading.show {
    color: blue;
  }
</style>

