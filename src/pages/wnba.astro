---
import PageHeader from "../components/PageHeader.astro";
import Layout from '../layouts/Layout.astro';
import GameList from '../components/GameList.astro';
import Header from '../components/Header.astro';
import { wnbaAPI } from '../config';

const games = await fetch(wnbaAPI);
const gameData = await games.json();
const gamesResults = await gameData.results;


---

<Layout title="Watch women's sports">
	<main>
		<Header />
		<PageHeader title="WNBA" sport="basketball" />
		<GameList title="WNBA" gameList={gamesResults} compact={true} />
	</main>
</Layout>


