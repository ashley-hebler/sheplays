---
import PageHeader from '../components/PageHeader.astro';
import Layout from '../layouts/Layout.astro';
import GameList from '../components/GameList.astro';
import Header from '../components/Header.astro';
import { soccerAPI } from '../config';

const games = await fetch(soccerAPI);
const gameData = await games.json();
const gamesResults = await gameData.results;

---

<Layout title="Watch women's sports">
	<main>
		<Header sport="soccer" />
		<PageHeader title="Soccer" sport="soccer" />
		<nav class="quick-links wrapper">
			<h2 class="quick-links__title">Leagues</h2>
			<ul class="quick-links__nav">
			  <li><a class="button" href="/usa">USA Soccer</a></li>
			  <li><a class="button" href="/nwsl">NWSL</a></li>
			</ul>
		  </nav>
        
		<GameList gameList={gamesResults} compact={false} />
	</main>
</Layout>


