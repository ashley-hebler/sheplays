<script>
  let currentHighlightIndex = -1;
  let searchCache = new Map();
  let searchTimeout: number;

  // API search function
  async function performSearch(query: string) {
    if (query.length < 2) return [];
    
    const cacheKey = `search_${query}`;
    if (searchCache.has(cacheKey)) {
      return searchCache.get(cacheKey);
    }

    try {
      const response = await fetch(`/api/search?q=${encodeURIComponent(query)}`);
      console.log('Search response status:', response.status);
      const data = await response.json();
      console.log('Search response data:', data);
      
      if (data.error) {
        throw new Error(data.error);
      }
      
      searchCache.set(cacheKey, data.results);
      return data.results || [];
    } catch (error) {
      console.error('Search error:', error);
      return [];
    }
  }

  function initOverlays() {
    console.log('hi!')
    const searchTrigger = document.getElementById('search-trigger');
    const searchOverlay = document.getElementById('search-overlay');
    const searchInput = document.getElementById('search-input') as HTMLInputElement;
    const searchResults = document.getElementById('search-results');
    
    const dateTrigger = document.getElementById('date-trigger');
    const dateOverlay = document.getElementById('date-overlay');
    const datePicker = document.getElementById('date-overlay-picker') as HTMLInputElement;

    if (!searchTrigger || !searchOverlay || !searchInput || !searchResults || 
        !dateTrigger || !dateOverlay || !datePicker) {
      return;
    }

    // Open search overlay
    const openSearch = () => {
      closeDate();
      searchOverlay.classList.remove('hidden');
      searchInput.focus();
      searchInput.value = '';
      searchResults.innerHTML = '';
      currentHighlightIndex = -1;
    };

    // Open date overlay
    const openDate = () => {
      closeSearch();
      dateOverlay.classList.remove('hidden');
      datePicker.focus();
    };

    // Close search overlay
    function closeSearch() {
      searchOverlay.classList.add('hidden');
      searchInput.value = '';
      searchResults.innerHTML = '';
      currentHighlightIndex = -1;
    }

    // Close date overlay
    function closeDate() {
      dateOverlay.classList.add('hidden');
    }

    // Event listeners for triggers
    searchTrigger.addEventListener('click', openSearch);
    searchTrigger.addEventListener('touchend', (e) => {
      e.preventDefault();
      openSearch();
    });

    dateTrigger.addEventListener('click', openDate);
    dateTrigger.addEventListener('touchend', (e) => {
      e.preventDefault();
      openDate();
    });

    // Close overlays on ESC or click outside
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        if (!searchOverlay.classList.contains('hidden')) {
          closeSearch();
        }
        if (!dateOverlay.classList.contains('hidden')) {
          closeDate();
        }
      }
    });

    searchOverlay.addEventListener('click', (e) => {
      if (e.target === searchOverlay) {
        closeSearch();
      }
    });

    dateOverlay.addEventListener('click', (e) => {
      if (e.target === dateOverlay) {
        closeDate();
      }
    });

    // Handle search input
    searchInput.addEventListener('input', async (e) => {
      const target = e.target as HTMLInputElement;
      const query = target.value.trim();
      console.log('Search input:', query);
      
      if (searchTimeout) {
        clearTimeout(searchTimeout);
      }
      
      if (query === '') {
        searchResults.innerHTML = '';
        currentHighlightIndex = -1;
        return;
      }

      if (query.length < 2) {
        searchResults.innerHTML = '<div class="search-result-item">Type at least 2 characters to search...</div>';
        return;
      }

      searchResults.innerHTML = '<div class="search-result-item">Searching...</div>';
      
      searchTimeout = setTimeout(async () => {
        try {
          const results = await performSearch(query);
          console.log('Search results:', results);
          renderSearchResults(results);
        } catch (error) {
          console.error('Search error:', error);
          searchResults.innerHTML = '<div class="search-result-item">Error searching. Please try again.</div>';
        }
      }, 300);
    });

    // Handle keyboard navigation in search
    searchInput.addEventListener('keydown', (e) => {
      const items = searchResults.querySelectorAll('.search-result-item');
      
      if (e.key === 'ArrowDown') {
        e.preventDefault();
        currentHighlightIndex = Math.min(currentHighlightIndex + 1, items.length - 1);
        updateHighlight(items);
      } else if (e.key === 'ArrowUp') {
        e.preventDefault();
        currentHighlightIndex = Math.max(currentHighlightIndex - 1, -1);
        updateHighlight(items);
      } else if (e.key === 'Enter' && currentHighlightIndex >= 0) {
        e.preventDefault();
        (items[currentHighlightIndex] as HTMLElement).click();
      }
    });

    function renderSearchResults(results: any[]) {
      currentHighlightIndex = -1;
      
      if (results.length === 0) {
        searchResults.innerHTML = '<div class="search-result-item">No results found</div>';
        return;
      }

      searchResults.innerHTML = results.map(result => {
        let displayText = result.name || 'Unknown';
        if (result.type === 'team') {
          const league = result.league || 'Unknown League';
          const sport = result.sport || 'Unknown Sport';
          displayText += ` (${league}, ${sport})`;
        }
        return `
          <div class="search-result-item" data-type="${result.type || ''}" data-id="${result.id || ''}" data-name="${result.name || ''}">
            <div class="search-result-team">${displayText}</div>
          </div>
        `;
      }).join('');

      // Add click handlers to results
      searchResults.querySelectorAll('.search-result-item').forEach((item: Element) => {
        item.addEventListener('click', () => {
          const element = item as HTMLElement;
          const type = element.dataset.type;
          const id = element.dataset.id;
          const name = element.dataset.name;
          
          console.log(`Selected ${type}:`, name, `ID: ${id}`);
          
          if (type === 'sport') {
            window.location.href = `/${name?.toLowerCase()}`;
          } else if (type === 'team') {
            window.location.href = `/teams/${id}`;
          }
          
          closeSearch();
        });
      });
    }

    function updateHighlight(items: NodeListOf<Element>) {
      items.forEach((item, index) => {
        const element = item as HTMLElement;
        element.classList.toggle('highlighted', index === currentHighlightIndex);
      });
    }
  }

  // Initialize when DOM is loaded and on page navigation
  function setupOverlays() {
    initOverlays();
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', setupOverlays);
  } else {
    setupOverlays();
  }

  // Re-initialize after client-side navigation (Astro's View Transitions)
  document.addEventListener('astro:page-load', setupOverlays);
</script>