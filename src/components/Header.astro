---
import Logo from "./Logo.astro";
import Spinner from "./Spinner.astro"

interface Props {
  sport: string;
}

const { sport } = Astro.props;
---

<Logo />
<Spinner sport={sport}/>
<nav>
  <ul class="navbar">
    <li><a href="/">Today</a></li>
    <li><a href="/ncaa-bball">College Basketball</a></li>
    <li><a href="/usa">US Soccer</a></li>
    <li><a href="/pwhl">PWHL</a></li>
  </ul>
</nav>

<nav>
  <div class="center">
    <h2>Teams to watch</h2>
  </div>
  <ul class="navbar navbar--tight">
    <li><a href="/teams/719">Iowa</a></li>
    <li><a href="/teams/799">South Carolina</a></li>
    <li><a href="/teams/1011">LSU</a></li>
    <li><a href="/teams/727">Virginia Tech</a></li>
  </ul>
</nav>

<style>
  a {
    color: inherit;
    text-decoration: none;
  }
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
  h2 {
    font-size: 1rem;
    text-transform: uppercase;
    margin-bottom: .5rem;
  }
  .navbar {
    list-style: none;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: 1200px;
    margin: 1rem auto 2rem;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
  .navbar li {
    background-color: var(--accent-alt);
    background-image: var(--accent-gradient-bold);
    color: white;
    text-align: center;
    padding: 0.5rem;
    border-radius: 0.4rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    font-size: 0.85rem;
  }
  .navbar li a {
    display: block;
  }
  .navbar--tight {
    margin-top: .3rem;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
    font-style: italic;
  }
  .instructions {
    line-height: 1.6;
    margin: 1rem 0;
    border: 1px solid rgba(var(--accent), 25%);
    background-color: white;
    padding: 1rem;
    border-radius: 0.4rem;
  }
  .instructions p {
    margin: 0;
  }
  .instructions p a {
    color: var(--accent-alt);
    font-weight: 700;
    text-decoration: underline;
  }
  .center {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.3rem;
  }
</style>
