import soccer from "../images/soccer.svg";
import softball from "../images/softball.svg";
import hockey from "../images/hockey.svg";

interface Props {
	sport: string;
}
const iconMap = {
    basketball,
    soccer,
    softball,
    hockey,
};

const {sport } = Astro.props;
---
