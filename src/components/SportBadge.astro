---
import { Image } from 'astro:assets';

import basketball from "/src/images/basketball.svg";
import soccer from "/src/images/soccer.svg";
import softball from "/src/images/softball.svg";
import hockey from "/src/images/hockey.svg";
import volleyball from "/src/images/volleyball.svg";

// inverses
import basketballInverse from "/src/images/basketball-inverse.svg";
import soccerInverse from "/src/images/soccer-inverse.svg";
import softballInverse from "/src/images/softball-inverse.svg";
import hockeyInverse from "/src/images/hockey-inverse.svg";
import volleyballInverse from "/src/images/volleyball-inverse.svg";

// screen
import screen from "/src/images/screen.svg";

interface Props {
	sport: string;
}
const iconMap = {
    basketball,
    soccer,
    softball,
    hockey,
    basketballInverse,
    soccerInverse,
    softballInverse,
    hockeyInverse,
    screen,
    volleyball,
    volleyballInverse
};

const {sport } = Astro.props;
---
<Image src={iconMap[sport]} alt={sport} />


