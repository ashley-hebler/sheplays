---
import { Image } from 'astro:assets';

import basketball from "/src/images/basketball.svg";
import soccer from "/src/images/soccer.svg";
import softball from "/src/images/softball.svg";
import hockey from "/src/images/hockey.svg";

interface Props {
	sport: string;
}
const iconMap = {
    basketball,
    soccer,
    softball,
    hockey,
};

const {sport } = Astro.props;
---
