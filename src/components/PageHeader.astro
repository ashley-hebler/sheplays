---
import SportBadge from "../components/SportBadge.astro";


interface Props {
	sport?: string;
    title: string;
}

const {sport, title } = Astro.props;
---
<div class="wrapper">
	<h2 class="page-title">{sport && <SportBadge sport={sport}/>}<span>{title}</span></h2>
</div>

<style>
    .page-title {
		display: flex;
		align-items: center;
		margin-bottom: 1rem;
		gap: 0.5rem;
		padding: .5rem;
		font-size: 1rem;
		font-weight: 900;
		text-transform: uppercase;
		letter-spacing: .1rem;
	}
</style>